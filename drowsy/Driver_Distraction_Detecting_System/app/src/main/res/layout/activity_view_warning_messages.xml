<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/planebg"
    tools:context=".View_warning_messages">


    <ImageView
        android:id="@+id/viewmess"
        android:layout_width="135dp"
        android:layout_height="126dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:src="@drawable/iconwar"
        app:srcCompat="@drawable/iconwar" />

<!--    <TextView-->
<!--        android:id="@+id/textView"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="VIEW WARNING MESSAGE"-->
<!--        android:textSize="25dp"-->
<!--        tools:layout_editor_absoluteX="48dp"-->
<!--        tools:layout_editor_absoluteY="16dp" />-->

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@android:color/white"
        android:cacheColorHint="@android:color/transparent"
        android:choiceMode="singleChoice"
        android:clipToPadding="false"
        android:divider="#E93C3838"
        android:dividerHeight="2dp"
        android:fastScrollEnabled="true"
        android:fastScrollStyle="?android:attr/fastScrollStyle"
        android:overScrollMode="always"
        android:padding="8dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="92dp" />

</LinearLayout>